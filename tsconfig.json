{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "paths": {
      "*": ["types/*"],
      "@app/*": ["src/*"]
    },
    "baseUrl": ".",
    "lib": [
      "dom",
      "es2015",
      "es2015.promise"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["dist", "build", "node_modules", "**/*.spec.tsx"]
}
